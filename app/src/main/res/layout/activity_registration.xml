<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ritvi.umnag.activity.RegistrationActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_back"
                android:layout_marginLeft="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="वापस"
                android:textStyle="bold"
                android:textColor="#0d558f"
                android:textSize="18sp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="पंजीकरण / रजिस्ट्रेशन"
                    android:textSize="22sp"
                    android:textColor="#105b9e"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="25dp"
                    android:text="चलिए आपको 10 अंको वाले मोबाइल नंबर के सत्यापन के साथ शुरू करते ह"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="हम सत्यापन के लिए इस नंबर पर OTP भेजेंगे"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="40dp"
                    android:drawableLeft="@drawable/ic_phone_number"
                    android:gravity="center_vertical"
                    android:hint="Number"
                    android:inputType="number"
                    android:drawablePadding="15dp"
                    android:textColor="#848484"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="यद् रखे, यह मोबाइल नंबर लोग इन परिक्रिया के लिए इस्तेमाल किया जायेगा" />


                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="अगला"
                    android:textSize="18sp"
                    android:background="@drawable/btn_next"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
